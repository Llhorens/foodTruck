<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Food Truck
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
		<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
		<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

	</head>
	<body>
		<header>
			<a href="{{ path('home') }}" class="logo">
				<i class="fas fa-utensils"></i>DAQ 2.0 Food Truck</a>
			<div id="menu-bar" class="fas fa-bars"></div>

			<nav class="navbar">
				<a href="{{ path('home') }}">Accueil</a>
				<a href="#card_menu">Notre carte</a>
				<a class="cart" href="{{ path('cart') }}">
					<ion-icon name="basket"></ion-icon>Panier
					<span>{{ app.session.get('panier')|length }}</span>
				</a>.
				{% if app.user %}
					{% if not is_granted('ROLE_ADMIN') %}
						<a class="login" href="{{ path('user_profile') }}">Profil</a>
					{% endif %}
					{% if is_granted('ROLE_ADMIN') %}
						<a class="login" href="{{ path('admin_profile') }}">Admin</a>
					{% endif %}
					<a class="register" href="{{ path('app_logout') }}">Deconnexion</a>

				{% else %}
					<a class="login" href="{{ path('app_login') }}">Connexion</a>
					<a class="register" href="{{ path('app_register') }}">S'enregistrer</a>
				{% endif %}


			</nav>
		</header>

		<!-- header section ends et navbar end aussi ahah -->

		{% block body %}{% endblock %}

		<!-- footer section  -->

		<section class="footer">

			<div class="share">
				<a href="https://www.facebook.com" class="btn">Facebook</a>
				<a href="https://twitter.com" class="btn">Twitter</a>
				<a href="https://www.linkedin.com" class="btn">Linkedin</a>
			</div>

			<h1 class="credit">
				© copyright
				<span>
					Bigey, Colez, Lhorens
				</span>
				| Tout droits reservés
			</h1>

		</section>
	</body>
	{% block javascripts %}
		{{ encore_entry_script_tags('app') }}
	{% endblock %}
</html>
